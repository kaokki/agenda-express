<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contatos</h1>
      <p class="text-center lead">Cadastre ou edite seus contatos abaixo:</p>

      <%- include('includes/messages'); %>

      <% if(contato._id) {%>
      <form class="contato-edit" action="/contato/edit/<%= contato._id %>" method="POST">
      <% } else { %>
      <form class="contato-register" action="/contato/register" method="POST">
      <% } %>

        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="mb-3">
          <label class="form-label">Nome</label>
          <input type="text" value="<%= contato.nome %>" class="form-control" placeholder="Digite o nome" name="nome">
        </div>

        <div class="mb-3">
          <label class="form-label">Sobrenome</label>
          <input type="text" value="<%= contato.sobrenome %>" class="form-control" placeholder="Digite o sobrenome" name="sobrenome">
        </div>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input type="email" value="<%= contato.email %>" class="form-control" placeholder="Digite o e-mail" name="email">
        </div>

        <div class="mb-3">
          <label class="form-label">Telefone</label>
          <input type="tel" value="<%- contato.telefone %>" class="form-control" placeholder="Digite o telefone" name="telefone">
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/foot'); %>